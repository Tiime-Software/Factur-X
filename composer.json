{
    "name": "tiime/factur-x",
    "description": "PHP library to manage your Factur-X (PDF invoices files)",
    "type": "library",
    "require": {
        "php": ">=8.3",
        "ext-dom": "*",
        "ext-fileinfo": "*",
        "ext-libxml": "*",
        "ext-simplexml": "*",
        "ext-zlib": "*",
        "tiime/en-16931": "^0.10.0",
        "setasign/fpdf": "^1.8",
        "setasign/fpdi": "^2.6",
        "ramsey/uuid": "^4.7",
        "smalot/pdfparser": "^2.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^12.0",
        "phpstan/phpstan": "^1.9",
        "friendsofphp/php-cs-fixer": "^3.64"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Tiime\\FacturX\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tiime\\FacturX\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Flavien RODRIGUES",
            "email": "rodrigues.flavien@gmail.com"
        },
        {
            "name": "Aur√©lien PILLEVESSE",
            "email": "aurelienpillevesse@hotmail.fr"
        }
    ],
    "scripts": {
        "test": "vendor/bin/phpunit tests",
        "fix-cs": "vendor/bin/php-cs-fixer fix",
        "phpstan": "vendor/bin/phpstan analyse -l 9 src tests"
    }
}
